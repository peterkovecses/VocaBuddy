@page "/gameplay/{WordCount:int}"
@attribute [Authorize]
@inherits GameplayBase

<PageTitle>Game</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="mt-3 text-center">GamePlay</h3>

            @if (Words is null)
            {
                <div class="d-flex justify-content-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-5">
                    <div class="card-body">
                        <form @onsubmit="() => IsSubmitted = true">
                            <div class="mb-3">
                                <label for="translation" class="form-label">@ActualWord.Text</label>
                                <div class="input-group">
                                    <input id="translation" class="form-control @(IsSubmitted ? (CorrectAnswer ? "border-success" : "border-danger") : "")" @bind="UserInput" required style="width: 200px;" autocomplete="off" spellcheck="false" />

                                    @if (IsSubmitted)
                                    {
                                        @if (CorrectAnswer)
                                        {
                                            <span class="input-group-text bg-success text-white">
                                                <i class="bi bi-check-lg"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="input-group-text bg-danger text-white">
                                                <i class="bi bi-x-lg"></i>
                                            </span>
                                        }
                                    }
                                </div>

                                @if (IsSubmitted && !CorrectAnswer)
                                {
                                    <p class="mt-3">The correct answer options are:</p>
                                    @foreach (var translation in ActualWord.Translations)
                                    {
                                        <span class="badge fs-6 bg-light text-dark m-1">@translation.Text</span>
                                    }
                                }
                            </div>

                            @if (!IsSubmitted)
                            {
                                <button type="submit" class="btn btn-primary mt-1 mb-1 me-1">Submit</button>
                                <button type="button" class="btn btn-secondary mt-1 mb-1" @onclick="() => IsSubmitted = true">Reveal</button>
                            }
                            else
                            {
                                <button class="btn btn-primary mt-1 mb-1" @onclick="NextRound">Next</button>
                            }
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>