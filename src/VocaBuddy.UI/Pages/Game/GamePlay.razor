@page "/gameplay/{WordCount:int}"
@attribute [Authorize]
@inherits GameplayBase

<PageTitle>Game</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="mt-3 text-center">GamePlay</h3>

            @if (Words is null)
            {
                <div class="d-flex justify-content-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-5">
                    <div class="card-body">
                        <form @onsubmit="() => IsSubmitted = true">
                            <div class="mb-3">
                                <label for="translation" class="form-label">@ActualWord.Text</label>
                                <input id="translation" class="form-control" @bind="UserInput" required style="width: 200px;" />
                            </div>
                            @if (!IsSubmitted)
                            {
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                            else
                            {
                                <button class="btn btn-primary" @onclick="NextRound">Next</button>
                                <div class="mt-3">
                                    @if (CorrectAnswer)
                                    {
                                        <div class="alert alert-success">
                                            Correct answer
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">
                                            Wrong answer. The correct answer options are: @string.Join("; ", ActualWord.Translations.Select(translation => translation.Text))
                                        </div>
                                    }
                                </div>
                            }
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>