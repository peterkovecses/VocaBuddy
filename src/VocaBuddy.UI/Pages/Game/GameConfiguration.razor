@page "/game-configuration"
@attribute [Authorize]
@inherits GameConfigurationBase

<PageTitle>Game Configuration</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="mt-3 text-center">Game Configuration</h3>

            @switch (MaxWordCount)
            {
                case null:
                    <div class="d-flex justify-content-center mt-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    break;
                case 0:
                    <div class="alert alert-warning mt-3">
                        There are no words in your vocabulary, to play, first
                        <a href="/create-or-update-word" class="alert-link">record words</a>.
                    </div>
                    break;
                default:
                {
                    <div class="card mt-5">
                        <div class="card-body">
                            <form @onsubmit="StartGame">
                                <div class="mb-3">
                                    <label for="wordCount" class="form-label">
                                        The number of words you want to practice (there is @MaxWordCount words in your vocabulary)
                                    </label>
                                    <div class="d-flex align-items-center">
                                        <input id="wordCount" class="form-control" type="number" min="1" max="@MaxWordCount" @bind="WordCount" @oninput="SetWordCount" required style="width: 80px;"/>
                                        @if (WordCount < MaxWordCount)
                                        {
                                            <div class="form-check ms-3">
                                                <input class="form-check-input" type="radio" id="random" name="gameMode" @onchange="@(() => GameMode = GameMode.Random)" checked="@(GameMode == GameMode.Random)">
                                                <label class="form-check-label" for="random">
                                                    Random
                                                </label>
                                            </div>
                                            <div class="form-check ms-3">
                                                <input class="form-check-input" type="radio" id="latest" name="gameMode" @onchange="@(() => GameMode = GameMode.Latest)" checked="@(GameMode == GameMode.Latest)">
                                                <label class="form-check-label" for="latest">
                                                    Latest
                                                </label>
                                            </div>
                                            <div class="form-check ms-3">
                                                <input class="form-check-input" type="radio" id="mistaken" name="gameMode" @onchange="@(() => GameMode = GameMode.Mistaken)" checked="@(GameMode == GameMode.Mistaken)">
                                                <label class="form-check-label" for="mistaken">
                                                    Mistaken
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">Start</button>
                            </form>
                        </div>
                    </div>
                    break;
                }
            }
        </div>
    </div>
</div>