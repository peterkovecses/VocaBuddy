@page "/game-configuration"
@using VocaBuddy.UI.Pages.Game;
@attribute [Authorize]
@inherits GameConfigurationBase

<PageTitle>Game Configuration</PageTitle>

<h3>Game Configuration</h3>

@if (MaxWordCount is null)
{
    <tr>
        <td colspan="4">
            <div class="d-flex justify-content-center">
                <div class="spinner-border ms-3" role="status" style="width: 1.5rem; height: 1.5rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </td>
    </tr>
}
else
{
    if (MaxWordCount == 0)
    {
        <div class="mt-3">There are no words in your vocabulary, to play, first <a class="link-primary" style="text-decoration: none" href="/create-or-update-word">record words</a>.</div>
    }
    else
    {
        <form @onsubmit="StartGame" class="mt-5">
            <div class="form-group mb-3">
                <label for="wordCount">The number of words you want to practice (there is @MaxWordCount words in your vocabulary)</label>
                <input id="wordCount" class="form-control" type="number" @bind="WordCount" required />
            </div>
            <button type="submit" class="btn btn-success me-2">Start</button>
        </form>
    }    
}

