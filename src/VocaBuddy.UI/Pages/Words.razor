@page "/words"
@inherits WordsBase

<h3>Words</h3>

<div class="container-fluid">
    <div class="row">
        @foreach (var word in Model)
        {
            <div class="col-xl-4 col-lg-6 mb-3">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <a href="">
                                @word.Text
                            </a>
                            <p class="mb-1">@word.TranslationsString</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
