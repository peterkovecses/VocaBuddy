@inherits MainLayoutBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid d-flex justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <div>@Email</div>
                        <a class="nav-link d-none d-lg-inline" href="logout">
                            <span class="oi oi-account-logout" aria-hidden="true"></span>
                            <span class="ms-2">Logout</span>
                        </a>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView>
                    <NotAuthorized>
                        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center">
                            <LoginComponent />
                            <a class="nav-link d-flex mt-2 mt-lg-0 ms-lg-3" href="register">
                                <span class="oi oi-person" aria-hidden="true"></span>
                                <span class="ms-2 text-nowrap">Create account</span>
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
                <AuthorizeView>
                    <Authorized>
                        <a class="nav-link d-lg-none d-block" href="logout">
                            <span class="oi oi-account-logout" aria-hidden="true"></span>
                            <span class="ms-2">Logout</span>
                        </a>
                    </Authorized>
                </AuthorizeView>
            </div>
        </nav>

        <article class="content px-4">
            <ErrorBoundary @ref="ErrorBoundary">
                <ChildContent>
                    <NotificationContainer />
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="row" style="height: 85vh">
                        <div class="my-auto text-center">
                            <h1 class="display-1">Oops...</h1>
                            <p class="lead">Something went wrong, please try again later.</p>
                            <a class="btn btn-primary mt-3" href="/">Back to Home</a>
                        </div>
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </article>

    </main>
</div>